{
  "name": "func-service",
  "version": "1.0.0",
  "main": "dist/bin.js",
  "license": "MIT",
  "preferGlobal": true,
  "scripts": {
    "start": "chmod +x ./dist/bin.js && bash ./scripts/dev.sh",
