{
  "name": "func-service",
  "version": "1.0.5",
  "main": "dist/bin.js",
  "license": "MIT",
  "preferGlobal": true,
  "scripts": {
    "start": "chmod +x ./dist/bin.js && bash ./scripts/dev.sh",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "build": "rm -rf dist && ncc -m build ./src/index.ts && cp bin.js ./dist/",
    "release": "yarn build && yarn publish --non-interactive"
  },
  "bin": {
    "func-service": "./dist/bin.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unix/func-service.git"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint-config-ts-lambdas"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "devDependencies": {
    "@types/node": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "@zeit/ncc": "^0.20.4",
    "chalk": "^2.4.2",
    "eslint": "^6.8.0",
    "eslint-config-ts-lambdas": "^1.1.1",
    "func": "^1.3.1",
    "ora": "^3.4.0",
    "ts-node": "^8.2.0",
    "typescript": "^3.8.3"
  }
}