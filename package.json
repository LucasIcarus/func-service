  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wittbulter/func-service.git"
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "chalk": "^2.4.2",
    "func": "^1.3.0",
    "ncc": "^0.3.6",
    "ora": "^3.4.0",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-lambdas": "^1.1.0",
    "typescript": "^3.5.2"
  }
}